<h1>Add a new album!</h1>

<%= form_for @album do |f| %>

	<div>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>

	<div>
		<%= f.label :artist %>
		<%= f.text_field :artist %>
	</div>

	<div>
		<%= f.label :rating %>
		<%= f.text_field :rating %>
	</div>

	<div>
		<%= f.label :num_tracks %>
		<%= f.text_field :num_tracks %>
	</div>

	<%= f.submit "Add a new album!" %>

<% end %>