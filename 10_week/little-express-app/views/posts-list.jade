link(rel="stylesheet" href="css/semantic.css")
script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.js")
script(src="js/semantic.js")
script(src="js/app.js")

h1 Check out the latest posts
ul
	each post in posts
		li
			a(href="/posts/" + post._id) #{post.title}

h2 Or create a new post
form(method="POST" action="/posts")
	input(type="text" placeholder="title" name="title")
	textarea(placeholder="Content goes here..." name="body")
	button(type="submit") Create New Post