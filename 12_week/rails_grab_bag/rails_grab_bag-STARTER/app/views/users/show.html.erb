<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <!-- start header -->
    <header>
      <h2 class="well text-primary">
        <%= image_tag @user.avatar_url, class: "avatar img img-circle" %>
        <em><%= @user.first_name %>'s Profile Page</em>
      </h2>
    </header>
    <!-- end header -->

    <!-- start contact info -->
    <section class="panel panel-primary">
      <div class="panel-heading">
        <h4 class="panel-title">Contact Info</h4>
      </div>
      <ul class="list-group panel-body">
        <li class="list-group-item"><strong>FIRST NAME:</strong> <%= @user.first_name %></li>
        <li class="list-group-item"><strong>LAST NAME:</strong> <%= @user.last_name %></li>
        <li class="list-group-item"><strong>EMAIL:</strong> <%= @user.email %></li>
        <li class="list-group-item"><strong>USERNAME:</strong> <%= @user.username %></li>
      </ul>
    </section>
    <!-- end contact info -->


  <!-- start people list -->
  <section class="panel panel-primary">

    <div class="panel-heading">
      <h4 class="panel-title">Other users nearby!</h4>
    </div>

    <div class="row panel-body">
      <div class="col-sm-10 col-sm-offset-1">
        <ul class="list-group">

          <% User.nearby(@user, 5000).each do |user| %>
            <a href=<%= user_path(user) %>
              <li class="list-group-item clearfix">
                <%= image_tag user.avatar_url, class: "img img-circle avatar pull-right" %>
                <h4><%= "#{user.first_name} #{user.last_name}" %></h4>
              </li>
            </a>
          <% end %>

        </ul>
      </div> <!-- end column -->
    </div> <!-- end row -->

  </section><!-- end people list -->
 </div> <!-- end column -->
</div> <!-- end row -->

 

