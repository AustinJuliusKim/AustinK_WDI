<h1>Add a new movie!</h1>

<%= form_for @movie do |f| %>
	<div>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	<br>
	<div>
		<%= f.label :rating %>
		<%= f.text_field :rating %>
	</div>
	<br>
	<div>
		<%= f.label :year %>
		<%= f.text_field :year %>
	</div>
	<br>
	<div>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>
<br>
	<%= f.submit "Add this movie!" %>

<% end %>
<br>
<%= link_to "Back to list!", movies_path %>